{
  "name": "godot-mcp-omni",
  "version": "0.1.0",
  "description": "Omni MCP server for Godot: headless operations + in-editor bridge.",
  "type": "module",
  "bin": {
    "godot-mcp-omni": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node scripts/build.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "smoke": "npm run build && node build/smoke.js",
    "verify:safety": "npm run build && node build/verify_safety.js",
    "verify:mcp": "npm run build && node scripts/verify_mcp.js",
    "verify:readme": "npm run build && node scripts/test_readme_examples.js",
    "verify:sprite": "npm run build && node scripts/test_load_sprite.js",
    "verify:all": "npm test && npm run verify:safety",
    "verify:examples": "npm run verify:readme && npm run verify:sprite",
    "verify:full": "npm run verify:all && npm run verify:mcp && npm run verify:examples",
    "test": "npm run build && node --test test/*.test.mjs",
    "demo:editor": "npm run build && node build/demo_editor.js",
    "sync:addon": "node scripts/sync_addon.js",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "lint": "eslint src scripts test",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "axios": "^1.7.9",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "typescript": "^5.3.3"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Coding-Solo/godot-mcp.git"
  },
  "keywords": [
    "godot",
    "mcp",
    "ai",
    "claude",
    "cline"
  ]
}
