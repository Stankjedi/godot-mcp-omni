{
  "schemaVersion": 1,
  "projectPath": "../game",
  "steps": [
    {
      "id": "WF-001",
      "title": "List tools",
      "tool": "tools/list",
      "args": {},
      "expectOk": true
    },
    {
      "id": "WF-002",
      "title": "Project preflight",
      "tool": "godot_preflight",
      "args": { "projectPath": "$PROJECT_PATH" },
      "expectOk": true
    },
    {
      "id": "WF-003",
      "title": "Doctor report",
      "tool": "godot_workspace_manager",
      "args": { "action": "doctor_report", "projectPath": "$PROJECT_PATH" },
      "expectOk": true
    },
    {
      "id": "WF-004",
      "title": "Headless smoke test (non-strict example)",
      "tool": "godot_workspace_manager",
      "args": {
        "action": "smoke_test",
        "projectPath": "$PROJECT_PATH",
        "waitMs": 1500,
        "failOnIssues": false
      },
      "expectOk": true
    }
  ]
}
